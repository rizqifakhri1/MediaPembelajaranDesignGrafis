<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/putih_muda">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/logo_upgris"
        android:layout_width="171dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_upgris"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg_biru"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="64dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_biru"
        android:layout_marginHorizontal="32dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/logo_upgris"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/kotak_biru"/>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/resource_char"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/bg_biru"
        app:layout_constraintStart_toStartOf="@id/bg_biru"
        app:layout_constraintTop_toBottomOf="@id/logo_upgris"/>

    <ImageView
        android:id="@+id/bg_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/home_lengkung"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ic_logoapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="-60dp"
        app:layout_constraintBottom_toTopOf="@id/btn_mulai"
        app:layout_constraintEnd_toEndOf="@id/bg_biru"
        app:layout_constraintStart_toStartOf="@id/bg_biru"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/logo_anim_fix" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_mulai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/btn_mulai_belajar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/btn"/>

    <ImageView
        android:layout_width="102dp"
        android:layout_height="112dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/yuk_belajar"
        app:layout_constraintEnd_toEndOf="@id/bg_biru"
        app:layout_constraintTop_toTopOf="@id/bg_biru"/>

    <TextView
        android:id="@+id/nama"
        android:text="Mohammad Zaki Zaidan \n (19340006)"
        android:textAlignment="textEnd"
        android:layout_width="0dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:elevation="12dp"
        app:layout_constraintStart_toEndOf="@id/logo_upgris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo_upgris"
        app:layout_constraintBottom_toBottomOf="@id/logo_upgris"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>