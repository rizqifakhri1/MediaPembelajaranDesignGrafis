<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectFragment">

    <ImageView
        android:id="@+id/ic_logoapp"
        android:layout_marginTop="32dp"
        android:layout_width="132dp"
        android:layout_height="98dp"
        android:src="@drawable/logo_app_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_logoapp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_materi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/biru"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_logoapp"
        app:layout_constraintBottom_toTopOf="@id/tv_atau"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/kotak_biru"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_materi"
        app:layout_constraintStart_toStartOf="@id/btn_materi"
        app:layout_constraintEnd_toEndOf="@id/btn_materi"
        app:layout_constraintTop_toTopOf="@id/btn_materi"
        app:layout_constraintBottom_toBottomOf="@id/btn_materi"/>

    <TextView
        android:id="@+id/tv_atau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Atau"
        android:textColor="@color/abu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_materi"
        app:layout_constraintBottom_toTopOf="@id/btn_video"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/abu"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_atau"
        app:layout_constraintTop_toTopOf="@id/tv_atau"
        app:layout_constraintBottom_toBottomOf="@id/tv_atau"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/abu"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_atau"
        app:layout_constraintTop_toTopOf="@id/tv_atau"
        app:layout_constraintBottom_toBottomOf="@id/tv_atau"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_atau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/kotak_orange"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_video"
        app:layout_constraintStart_toStartOf="@id/btn_video"
        app:layout_constraintEnd_toEndOf="@id/btn_video"
        app:layout_constraintTop_toTopOf="@id/btn_video"
        app:layout_constraintBottom_toBottomOf="@id/btn_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>